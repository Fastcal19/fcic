      width: 90%;
      max-width: 1200px;
      margin: 40px 0;
      padding: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Portals Section */
    #portalsPage {
      width: 100%;
    }

    #portalsPage h2 {
      margin-bottom: 25px;
      font-size: 26px;
      font-weight: bold;
      color: #FF8C00;
      text-align: center;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }

    .portals-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 30px;
      justify-items: center;
    }

    .portal-card {
      background: #fff;
      border-radius: 16px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
      height: 150px;
